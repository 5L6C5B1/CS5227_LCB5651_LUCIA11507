@model SmallCartViewModel

@if (Model != null)
{
    <p>Items in Cart: <span class="badge badge-primary">@Model.NumOfItems</span></p>
    <p>Total: <b>@Model.TotalAmount.ToString("C2")</b></p>
    <a class="btn btn-primary mb-2" asp-controller="Cart" asp-action="Cart">View Cart</a>
    <a class="btn btn-danger">Clear Cart</a>
    
}else{
    <p class="lead m-()">Your cart is empty</p>
}
